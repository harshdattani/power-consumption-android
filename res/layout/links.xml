<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbarSize="15dp"
     android:background="#E9E9E9"
    android:fadeScrollbars="false"
     >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    android:orientation="vertical" >

    <Button
        android:id="@+id/heattitle"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_blue"
        android:onClick="geda"
        android:layout_gravity="center_horizontal"
        android:text="http://www.geda.org.in/"
        android:textColor="#ffffff"
        android:textSize="20dp" />
    
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >

    <TextView
        android:id="@+id/heattext"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"     
        
        android:text="Gujarat Energy Development Agency" />

</LinearLayout>

 <Button
        android:id="@+id/heattitle2"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_green"
        android:onClick="geb"
        android:layout_gravity="center_horizontal"
        android:text="http://www.gseb.com/"
        android:textColor="#ffffff"
        android:textSize="20dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     >

   

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"      
        android:text="Gujarat Electricity Board (GEB)" />

</LinearLayout>

 <Button
        android:id="@+id/heattitle3"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_green2"
        android:onClick="gil"
        android:layout_gravity="center_horizontal"
        android:text="http://gil.gujarat.gov.in/"
        android:textColor="#ffffff"
        android:textSize="20dp" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
     >



    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"      
        android:text="Gujarat Informatics Limited" />
       
</LinearLayout>

</LinearLayout>
</ScrollView>