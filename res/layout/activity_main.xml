<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:ellipsize="marquee"
        android:layout_margin="20dp"
        android:marqueeRepeatLimit ="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:singleLine="true"
        android:textSize="20dp" 
        android:id="@+id/headline"/>

<LinearLayout 
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="10dp"
        android:id="@+id/l1"
        >

        <Button 
               android:id="@+id/estimatecost"
               android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
               android:layout_margin="4dp"
               android:text="Estimate Consumption"
               android:background="@drawable/button_green"
               android:onClick="estimate_cost"
               android:textColor="#ffffff"
           />
        <Button 
               android:id="@+id/takequiz"
               android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
               android:layout_margin="4dp"
               android:text="Take Quiz"
               android:onClick="takequiz"
               android:textColor="#ffffff"
               android:background="@drawable/button_green"
           />
        <Button 
               android:id="@+id/tips"
               android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
               android:layout_margin="4dp"
               android:onClick="tips"
               android:textColor="#ffffff"
               android:text="Power Saving Tips"
               android:background="@drawable/button_green"
           />
        <Button 
               android:id="@+id/implinks"
               android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
               android:layout_margin="4dp"
               android:onClick="links"
               android:textColor="#ffffff"
               android:text="Important Links"
               android:background="@drawable/button_green"
           />
        </LinearLayout>

</RelativeLayout>
