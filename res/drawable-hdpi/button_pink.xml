<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FE9E9B" />
            <stroke
                android:width="1dp"
                android:color="#FE9E9B" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#EC6D6A"
                android:endColor="#FE9E9B"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FE9E9B" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>