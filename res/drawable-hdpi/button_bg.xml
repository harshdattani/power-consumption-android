<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#1D6C00" />
            <stroke
                android:width="1dp"
                android:color="#8CA513" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#1D6C00"
                android:endColor="#8CA513"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#8CA513" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>